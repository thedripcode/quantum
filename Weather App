<body>
    <div class="container">
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search for a city...">
            <button onclick="addCity()">Add City</button>
        </div>

        <div class="loading" id="loading" style="display: none;">Loading weather data...</div>

        <div class="weather-grid" id="weatherGrid"></div>
    </div>

    <script>
        const weatherBgs = {
            'rainy': 'https://images.unsplash.com/photo-1428908728789-d2de25dbd4e2?w=800&h=1000&fit=crop',
            'sunny': 'https://images.unsplash.com/photo-1601297183305-6df142704ea2?w=800&h=1000&fit=crop',
            'cloudy': 'https://images.unsplash.com/photo-1534088568595-a066f410bcda?w=800&h=1000&fit=crop',
            'partly cloudy': 'https://images.unsplash.com/photo-1546587348-d12660c30c50?w=800&h=1000&fit=crop',
            'clear': 'https://images.unsplash.com/photo-1419242902214-272b3f66ee7a?w=800&h=1000&fit=crop'
        };

        const cities = {
            'cape town': {t: 22, d: 'sunny', fc: [{n: 'FRI', i: '‚òÄÔ∏è', t: 24}, {n: 'SAT', i: '‚òÄÔ∏è', t: 25}, {n: 'SUN', i: '‚õÖ', t: 23}, {n: 'MON', i: 'üåßÔ∏è', t: 19}, {n: 'TUE', i: '‚õÖ', t: 21}]},
            'johannesburg': {t: 18, d: 'partly cloudy', fc: [{n: 'FRI', i: '‚õÖ', t: 19}, {n: 'SAT', i: '‚òÄÔ∏è', t: 21}, {n: 'SUN', i: '‚òÄÔ∏è', t: 22}, {n: 'MON', i: '‚õÖ', t: 20}, {n: 'TUE', i: 'üåßÔ∏è', t: 17}]},
            'durban': {t: 26, d: 'clear', fc: [{n: 'FRI', i: '‚òÄÔ∏è', t: 27}, {n: 'SAT', i: '‚òÄÔ∏è', t: 28}, {n: 'SUN', i: '‚õÖ', t: 26}, {n: 'MON', i: '‚õÖ', t: 25}, {n: 'TUE', i: '‚òÄÔ∏è', t: 27}]},
            'pretoria': {t: 19, d: 'sunny', fc: [{n: 'FRI', i: '‚òÄÔ∏è', t: 20}, {n: 'SAT', i: '‚òÄÔ∏è', t: 22}, {n: 'SUN', i: '‚õÖ', t: 21}, {n: 'MON', i: 'üåßÔ∏è', t: 18}, {n: 'TUE', i: '‚õÖ', t: 19}]},
            'port elizabeth': {t: 20, d: 'partly cloudy', fc: [{n: 'FRI', i: '‚õÖ', t: 21}, {n: 'SAT', i: '‚òÄÔ∏è', t: 23}, {n: 'SUN', i: '‚òÄÔ∏è', t: 22}, {n: 'MON', i: '‚õÖ', t: 20}, {n: 'TUE', i: 'üåßÔ∏è', t: 18}]},
            'bloemfontein': {t: 17, d: 'sunny', fc: [{n: 'FRI', i: '‚òÄÔ∏è', t: 18}, {n: 'SAT', i: '‚òÄÔ∏è', t: 20}, {n: 'SUN', i: '‚õÖ', t: 19}, {n: 'MON', i: '‚òÅÔ∏è', t: 16}, {n: 'TUE', i: '‚õÖ', t: 17}]}
        };

        let displayedCities = ['cape town', 'durban'];

        function createCard(cityName, data) {
            const bg = weatherBgs[data.d] || weatherBgs['cloudy'];
            
            return `
                <div class="weather-card">
                    <div class="card-image" style="background-image: url('${bg}')">
                        <div class="weather-overlay">
                            <div class="location">
                                <span>üìç</span>
                                <span>${cityName}</span>
                            </div>
                            
                            <div class="main-temp">
                                <div class="temp-display">${data.t}¬∞</div>
                                <div class="weather-desc">${data.d}</div>
                            </div>

                            <div class="forecast-strip">
                                ${data.fc.map(day => `
                                    <div class="forecast-day">
                                        <div class="day-name">${day.n}</div>
                                        <div class="day-icon">${day.i}</div>
                                        <div class="day-temp">${day.t}¬∞</div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="city-name">${cityName.split(' ').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}</div>
                        <button class="refresh-btn" onclick="refreshCard('${cityName}')">‚Üª</button>
                    </div>
                </div>
            `;
        }

        function render() {
            const grid = document.getElementById('weatherGrid');
            grid.innerHTML = displayedCities.map(city => createCard(city, cities[city])).join('');
        }

        function addCity() {
            const input = document.getElementById('searchInput');
            const city = input.value.trim().toLowerCase();
            
            if (!city) return;

            if (cities[city] && !displayedCities.includes(city)) {
                displayedCities.push(city);
                render();
                input.value = '';
            } else if (!cities[city]) {
                alert('City not available. Try: Cape Town, Johannesburg, Durban, Pretoria, Port Elizabeth, Bloemfontein');
            } else {
                alert('City already displayed');
            }
        }

        function refreshCard(city) {
            const data = cities[city];
            data.t = data.t + Math.floor(Math.random() * 3 - 1);
            render();
        }

        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') addCity();
        });

        render();
    </script>
</body>
</html>
